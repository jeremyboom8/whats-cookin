<div class="banner"
 style="background-image: linear-gradient(-225deg, rgba(252,74,26,0.3) 0%, rgba(247,183,51,0.3) 50%), url('https://images.unsplash.com/photo-1447279506476-3faec8071eee?auto=format&fit=crop&w=1050&q=60&ixid=dW5zcGxhc2guY29tOzs7Ozs%3D');" id="banner-show">
  <div class="banner-content">
    <h1><%= @listing.title %></h1>
  </div>
</div>

<div class="container">
  <div class="row">

    <div class="col-xs-12 col-sm-8">
      <div class="listing-main">
        <%= link_to listings_path do %>
          <p><span class="glyphicon glyphicon-circle-arrow-left" aria-hidden="true"></span> Back to all listings</p>
        <% end %>
        <div class="listing-content">
          <h2><%= @listing.title %></h2>
          <% if @listing.photo? %>
            <%= cl_image_tag @listing.photo.path, width: 300, crop: :fill, style: "margin-bottom: 30px;" %>
          <% end %>
          <p><span class="glyphicon glyphicon-map-marker" aria-hidden="true">
              </span><%= @listing.address %></p>
          <p><em></em><%= @listing.description %></p>
        </div>
      </div>
    </div>

    <div class="col-xs-12 col-sm-4">
      <div class="listing-booking">
        <h2>DKK <%= @listing.price %></h2>

        <%= simple_form_for [@listing, @booking] do |f| %>
          <%= f.input :booking_date %>
          <%= f.submit "Book now", class: "btn btn-primary" %>
        <% end %>

        <p style="margin-bottom: 10px; margin-top: 20px;">Unavailable Dates</p>
        <% @bookings.each do |cb| %>
          <p style="margin-bottom: 0px;"><%= cb.booking_date %></p>
        <% end %>
      </div>
    </div>

    <div class="col-xs-12 col-sm-4">
      <div class="listing-booking">

        <%= image_tag @listing.user.facebook_picture_url, id: "avatar", style: "display: inline-block;" %>
        <h2 style="display: inline-block;"><%= @listing.user.first_name %></h2>

      </div>
    </div>

  </div>
</div>
