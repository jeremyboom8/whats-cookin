<div class="navbar-cookin">
  <!-- Logo -->
  <%= link_to root_path, class: "navbar-cookin-brand" do %>
    <%= image_tag "whats-cookin-logo.png" %>
  <% end %>

  <!-- Right Navigation -->
  <div class="navbar-cookin-right hidden-xs hidden-sm">

    <% if user_signed_in? %>
      <!-- Links when logged in -->
      <%= link_to "Home", root_path, class: "navbar-cookin-item navbar-cookin-link" %>
      <%= link_to "Search listings", listings_path, class: "navbar-cookin-item navbar-cookin-link" %>
      <%= link_to "Help", "#", class: "navbar-cookin-item navbar-cookin-link" %>

      <!-- Avatar with dropdown menu -->
      <div class="navbar-cookin-item">
        <div class="dropdown">
          <% avatar_url = current_user.facebook_picture_url || "user_icon.png" %>
          <%= image_tag avatar_url, class: "avatar dropdown-toggle", id: "navbar-cookin-menu", "data-toggle" => "dropdown" %>
          <ul class="dropdown-menu dropdown-menu-right navbar-cookin-dropdown-menu">
            <li>
              <%= link_to "#" do %>
                <i class="fa fa-user"></i> <%= t(".profile", default: "Profile") %>
              <% end %>
            </li>
            <li>
              <%= link_to "#" do %>
                <i class="fa fa-server"></i> <%= t(".profile", default: "Dashboard") %>
              <% end %>
            </li>
            <li>
              <%= link_to root_path do %>
                <i class="fa fa-home"></i>  <%= t(".profile", default: "Home") %>
              <% end %>
            </li>
            <li>
              <%= link_to destroy_user_session_path, method: :delete do %>
                <i class="fa fa-sign-out"></i>  <%= t(".sign_out", default: "Log out") %>
              <% end %>
            </li>
          </ul>
        </div>
      </div>
    <% else %>
      <!-- Login link (when logged out) -->
      <%= link_to t(".sign_in", default: "Login"), new_user_session_path, class: "navbar-cookin-item navbar-cookin-link" %>
      <%= link_to t(".sign_in", default: "Sign up"), new_user_registration_path, class: "navbar-cookin-item navbar-cookin-link" %>
    <% end %>
  </div>

  <!-- Dropdown list appearing on mobile only -->
  <div class="navbar-cookin-item hidden-md hidden-lg">
    <div class="dropdown">
      <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
      <ul class="dropdown-menu dropdown-menu-right navbar-cookin-dropdown-menu">
        <li><%= link_to "Profile", "#" %></li>
        <li><%= link_to "Dashboard", "#" %></li>
        <li><%= link_to "Search listings", listings_path %></li>
      </ul>
    </div>
  </div>
</div>

